@model CVSante.Models.UserParamedic

@{
    ViewData["Title"] = "Ajouter un Premier Répondant";
}
<h2>@ViewData["Title"]</h2>

<div class="form-container">
    <form asp-action="Edit">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Nom -->
                    <div class="form-group row">
                        <label asp-for="Nom" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Nom" class="form-control" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Prénom -->
                    <div class="form-group row">
                        <label asp-for="Prenom" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Prenom" class="form-control" />
                            <span asp-validation-for="Prenom" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Ville -->
                    <div class="form-group row">
                        <label asp-for="Ville" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Ville" class="form-control" />
                            <span asp-validation-for="Ville" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Numéro de téléphone -->
                    <div class="form-group row">
                        <label asp-for="Telephone" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Telephone" class="form-control" />
                            <span asp-validation-for="Telephone" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Actif -->
                    <div class="form-group row">
                        <label asp-for="ParamIsActive" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="ParamIsActive" class="form-check-input" type="checkbox" />
                            <span asp-validation-for="ParamIsActive" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Matricule -->
                    <div class="form-group row">
                        <label asp-for="Matricule" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Matricule" class="form-control" readonly />
                            <span asp-validation-for="Matricule" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Courriel -->
                    <div class="form-group row">
                        <label asp-for="Courriel" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Courriel" class="form-control" />
                            <span asp-validation-for="Courriel" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- FkCompany -->
                    <div class="form-group row">
                        <label asp-for="FkCompany" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <select asp-for="FkCompany" class="form-control" asp-items="ViewBag.FkCompany"></select>
                            <span asp-validation-for="FkCompany" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- FkIdentityUser -->
                    <div class="form-group row">
                        <label asp-for="FkIdentityUser" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <select asp-for="FkIdentityUser" class="form-control" asp-items="ViewBag.FkIdentityUser"></select>
                            <span asp-validation-for="FkIdentityUser" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Mot de passe -->
                    <div class="form-group row">
                        <label asp-for="MotDePasse" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="MotDePasse" class="form-control" type="password" />
                            <span asp-validation-for="MotDePasse" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Confirmer mot de passe -->
                    <div class="form-group row">
                        <label asp-for="ConfirmerMotDePasse" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="ConfirmerMotDePasse" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmerMotDePasse" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="form-group row">
                        <div class="col-md-10 offset-md-2">
                            <button type="submit" class="btn btn-primary">Mettre à jour</button>
                            <a asp-action="Index" class="btn btn-secondary">Annuler</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

