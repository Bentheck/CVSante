@model CVSante.ViewModels.ManageCompany

@{
    ViewData["Title"] = "Manage Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@Model.Company.CompName</h4>
<hr />
<form asp-action="ManageCompany">
    <table class="table">
        <thead>
            <tr>
                <th>Employé</th>
                <th>Matricule</th>
                <th>Actif</th>
                <th>Retirer de la compagnie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var paramedic in Model.Paramedics)
            {
                <tr>
                    <td>@paramedic.Nom</td>
                    <td>@paramedic.Matricule</td>
                    <td>
                        <input type="checkbox" asp-for="@paramedic.ParamIsActive" />
                    </td>
                    <td>
                        <button type="submit" name="removeParamedicId" value="@paramedic.ParamId" class="btn btn-link" onclick="return confirm('Voulez-vous vraiment retiré cet employé de la compagnie?');">Retirer</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Sauvegarder</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </div>

    <div class="form-group">
        <a asp-action="ManageRoles" class="btn btn-secondary">Gestion des rôles</a>
    </div>
</form>
