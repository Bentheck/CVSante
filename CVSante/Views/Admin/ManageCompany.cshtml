@model CVSante.ViewModels.ManageCompany

@{
    ViewData["Title"] = "Manage Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    form {
        margin-top: 20px;
    }


    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    input.form-control {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        border-radius: 5px;
        border: 1px solid #ccc;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        transition: border-color 0.3s ease;
    }

        input.form-control:focus {
            border-color: #007bff;
            outline: none;
        }

    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Style pour le lien retour */
    a {
        margin-top: 20px;
        display: inline-block;
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
<h4>Company</h4>

<h4>@Model.Company.CompName</h4>

<hr />
<form asp-action="ManageCompany" method="post">
    <input type="hidden" asp-for="Company.IdComp" />

    <table class="table">
        <thead>
            <tr>
                <th>Employé</th>
                <th>Matricule</th>
                <th>Actif</th>
                <th>Retirer de la compagnie</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Paramedics.Count; i++)
            {
                <tr>
                    <td>@Model.Paramedics[i].Nom</td>
                    <td>@Model.Paramedics[i].Matricule</td>
                    <td>
                        <input asp-for="Paramedics[i].ParamId" type="hidden" />
                        <input asp-for="Paramedics[i].ParamIsActive" type="checkbox" />
                    </td>
                    <td>
                        <button type="submit" name="removeParamedicId" value="@Model.Paramedics[i].ParamId" class="btn btn-link" onclick="return confirm('Voulez-vous vraiment retirer cet employé de la compagnie ?');">Retirer</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>


<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
<script>
    $(document).ready(function() {
    $('form').on('submit', function(event) {
    var isValid = true;

    // Vérifier si tous les champs requis sont remplis
    $('input.form-control').each(function() {
    if ($(this).val().trim() === '') {
    $(this).addClass('is-invalid');
    isValid = false;
    } else {
    $(this).removeClass('is-invalid');
    }
    });

    if (!isValid) {
    event.preventDefault();
    alert('Please fill in all required fields.');
    }
    });

    // Supprimer l'état d'erreur lors de la saisie
    $('input.form-control').on('input', function() {
    if ($(this).val().trim() !== '') {
    $(this).removeClass('is-invalid');
    }
    });
    });
</script>
}

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Sauvegarder</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </div>

    <div class="form-group">
        <a asp-action="ManageRoles" class="btn btn-secondary">Gestion des rôles</a>
    </div>
</form>

