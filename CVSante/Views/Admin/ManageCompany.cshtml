@model CVSante.Models.Company

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    form {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    input.form-control {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        border-radius: 5px;
        border: 1px solid #ccc;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        transition: border-color 0.3s ease;
    }

        input.form-control:focus {
            border-color: #007bff;
            outline: none;
        }

    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Style pour le lien retour */
    a {
        margin-top: 20px;
        display: inline-block;
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
<h4>Company</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ManageCompany">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdComp" />
            <div class="form-group">
                <label asp-for="CompName" class="control-label"></label>
                <input asp-for="CompName" class="form-control" />
                <span asp-validation-for="CompName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdLink" class="control-label"></label>
                <input asp-for="AdLink" class="form-control" />
                <span asp-validation-for="AdLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdId" class="control-label"></label>
                <input asp-for="AdId" class="form-control" />
                <span asp-validation-for="AdId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
<script>
    $(document).ready(function() {
    $('form').on('submit', function(event) {
    var isValid = true;

    // Vérifier si tous les champs requis sont remplis
    $('input.form-control').each(function() {
    if ($(this).val().trim() === '') {
    $(this).addClass('is-invalid');
    isValid = false;
    } else {
    $(this).removeClass('is-invalid');
    }
    });

    if (!isValid) {
    event.preventDefault();
    alert('Please fill in all required fields.');
    }
    });

    // Supprimer l'état d'erreur lors de la saisie
    $('input.form-control').on('input', function() {
    if ($(this).val().trim() !== '') {
    $(this).removeClass('is-invalid');
    }
    });
    });
</script>
}