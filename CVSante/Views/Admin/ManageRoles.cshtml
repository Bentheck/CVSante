@model CVSante.Models.UserParamedic

@{
    ViewData["Title"] = "Gestion des rôles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
   
}
<h1>Gestion des rôles</h1>

<form asp-action="SaveRoleManagement" asp-controller="Admin" method="post" class="form-horizontal">
    <div class="row">
        <div class="col-md-6">
            <h3>Rôles</h3>
            <ul id="rolesList" class="list-group">
                @foreach (var role in Model.SelectMany(m => m.FkRoles).Distinct())
                {
                    <li class="list-group-item role-item" data-role="@role.RoleName">@role.RoleName</li>
                }
            </ul>
            <button type="button" class="btn btn-primary" id="addBtn">Ajouter</button>
            <button type="button" class="btn btn-warning" id="editBtn">Modifier</button>
            <button type="button" class="btn btn-danger" id="deleteBtn">Supprimer</button>
        </div>
        <div class="col-md-6">
            <h3>Droits</h3>
            <div>
                <input type="checkbox" id="createResponder" disabled> Créer nouveau répondant<br>
                <input type="checkbox" id="viewHistory" disabled> Visionner historique<br>
                <input type="checkbox" id="viewCitizenFile" disabled> Voir dossier citoyen<br>
            </div>
            <button type="button" class="btn btn-secondary" id="cancelBtn">Annuler</button>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-primary" id="saveBtn">Sauvegarder</button>
            <button type="button" class="btn btn-secondary" id="returnBtn">Retour</button>
        </div>
    </div>
</form>
