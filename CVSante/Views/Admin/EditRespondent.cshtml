@model CVSante.Models.UserParamedic
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .card {
        border-radius: 10px;
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.02);
        }

    .card-header {
        font-weight: bold;
    }

    .form-group label {
        font-weight: bold;
    }

    .btn-link {
        color: #007bff; /* Light blue link color */
    }

        .btn-link:hover {
            color: #0056b3; /* Darker blue on hover */
            text-decoration: underline;
        }

    .btn-light {
        background-color: #e7f3ff; /* Light blue background for buttons */
        border: 1px solid #007bff; /* Border color */
    }

        .btn-light:hover {
            background-color: #d0e7ff;
        }

    .form-check-label {
        font-weight: bold;
    }

    .form-check-input {
        margin-right: 10px;
    }
</style>

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="text-primary">Edit User Paramedic</h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-light text-primary">
                    <h5 class="mb-0">Paramedic Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditRespondent">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Nom" class="control-label"></label>
                            <input asp-for="Nom" class="form-control" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Prenom" class="control-label"></label>
                            <input asp-for="Prenom" class="form-control" />
                            <span asp-validation-for="Prenom" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Ville" class="control-label"></label>
                            <input asp-for="Ville" class="form-control" />
                            <span asp-validation-for="Ville" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Telephone" class="control-label"></label>
                            <input asp-for="Telephone" class="form-control" />
                            <span asp-validation-for="Telephone" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="ParamId" />

                        <div class="form-group form-check mb-3">
                            <input class="form-check-input" asp-for="ParamIsActive" />
                            <label class="form-check-label" asp-for="ParamIsActive">Active</label>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Matricule" class="control-label"></label>
                            <input asp-for="Matricule" class="form-control" />
                            <span asp-validation-for="Matricule" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FkCompany" class="control-label"></label>
                            <select asp-for="FkCompany" class="form-control" asp-items="ViewBag.FkCompany"></select>
                            <span asp-validation-for="FkCompany" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="FkIdentityUser" class="control-label"></label>
                            <select asp-for="FkIdentityUser" class="form-control" asp-items="ViewBag.FkIdentityUser"></select>
                            <span asp-validation-for="FkIdentityUser" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-light text-primary ms-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
