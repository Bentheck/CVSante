@model CVSante.ViewModels.Paramedic
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .card {
        border-radius: 15px;
    }

    .card-header {
        font-weight: bold;
        font-size: 1.5rem;
        background-color: #007bff;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        transition: background-color 0.3s;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .btn-light {
        background-color: #f8f9fa;
        border-color: #f8f9fa;
        transition: background-color 0.3s;
    }

        .btn-light:hover {
            background-color: #e2e6ea;
            border-color: #dae0e5;
        }
</style>
<div class="container mt-5">
    <div class="card ">
        <div class="card-header">

            <h1 class="dashboard-title text-center">Tableau de bord d'administration</h1>
        </div>
        <div class="card-body text-center">
            <p>Gérez les informations du 1er répondant, affichez les profils et modifiez les rôles.</p>


            <div class="btn-grid">
                <a asp-action="SearchCitoyen" asp-route-id="@Model?.paramInfo.ParamId" class="btn btn-dashboard btn-primary">
                    <i class="fas fa-search mr-2"></i> Rechercher le citoyen
                </a>
                <a asp-action="AddRespondent" asp-route-id="@Model?.paramInfo.ParamId" class="btn btn-dashboard btn-secondary">
                    <i class="fas fa-user-plus mr-2"></i> Ajouter le 1er Répondant
                </a>
                <a asp-action="EditRespondent" asp-route-id="@Model?.paramInfo.ParamId" class="btn btn-dashboard btn-info">
                    <i class="fas fa-user-edit mr-2"></i> Modifier le 1er Répondant
                </a>
                <a asp-action="History" asp-route-id="@Model?.paramInfo.ParamId" class="btn btn-dashboard btn-secondary">
                    <i class="fas fa-history mr-2"></i> Afficher l'historique
                </a>
                <a asp-action="ManageCompany" asp-route-id="@Model?.paramInfo.ParamId" class="btn btn-dashboard btn-info">
                    <i class="fas fa-building mr-2"></i> Gérer la Compagnie
                </a>
                <a asp-action="ManageRoles" asp-route-id="@Model?.paramInfo.ParamId" class="btn btn-dashboard btn-primary">
                    <i class="fas fa-users-cog mr-2"></i> Gérer les Rôles
                </a>
            </div>

            <div class="text-center mt-4">
                <a asp-controller = "Home" asp-action="Index" class="btn btn-dashboard ">
                    <i class="fas fa-arrow-left mr-2"></i> Retour à l'acceuil
                </a>
            </div>
            <div class="card-footer">
                Dernière mise à jour : @DateTime.Now.ToString("MMMM dd, yyyy")
            </div>
        </div>
    </div>
</div>