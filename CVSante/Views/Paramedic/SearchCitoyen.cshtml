@model IEnumerable<CVSante.Models.UserInfo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    ViewData["Title"] = "Search Citizens";
}
<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f7f9fc; /* Couleur de fond douce */
        color: #333; /* Couleur de texte standard */
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    h2 {
        color: #0056b3; /* Couleur bleue plus sombre */
        margin-bottom: 30px;
        text-align: center;
        font-size: 2.5rem; /* Taille de police augmentée */
        font-weight: bold;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1); /* Ombre légère */
    }

    .search-form {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        font-size: 16px;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #007bff; /* Couleur bleue pour le focus */
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
        transition: all 0.3s ease;
        border: none; /* Suppression de la bordure */
    }

    .btn-primary {
        background-color: #007bff; /* Couleur bleue */
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Couleur bleue plus foncée */
        }

    .btn-info {
        background-color: #17a2b8; /* Couleur bleu-vert */
        color: white;
    }

        .btn-info:hover {
            background-color: #138496; /* Couleur bleu-vert plus foncée */
        }

    .table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background-color: #fff;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        border-radius: 8px;
        overflow: hidden;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }

        .table th {
            background-color: #f8f9fa;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.9em;
            color: #495057;
        }

        .table tr:last-child td {
            border-bottom: none;
        }

    .alert {
        padding: 15px;
        border-radius: 4px;
        margin-bottom: 20px;
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffeeba;
        color: #856404;
    }
</style>

<div class="container">
    <h2>Rechercher des Citoyens</h2>

    <!-- Search Form -->
    <div class="search-form">
        <form asp-action="SearchCitoyen" method="get">
            <div class="form-group">
                <label for="searchString">Rechercher par Nom ou ID Utilisateur :</label>
                <input type="text" class="form-control" id="searchString" name="searchString" value="@ViewBag.SearchString" placeholder="Entrez le nom ou l'ID utilisateur" />
            </div>
            <button type="submit" class="btn btn-primary">Rechercher</button> <!-- Bouton en bleu -->
        </form>

        <!-- Display Message if No Results Found after Search -->
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-warning mt-3">
                @ViewBag.Message
            </div>
        }

        <!-- Display Results Only If Search String Is Provided -->
        @if (Model != null && Model.Any() && !string.IsNullOrWhiteSpace(ViewBag.SearchString))
        {
            <table class="table table-striped table-bordered mt-3">
                <thead>
                    <tr>
                        <th>ID Utilisateur</th>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var citoyen in Model)
                    {
                        <tr>
                            <td>@citoyen.FkUserId</td>
                            <td>@citoyen.Prenom</td>
                            <td>@citoyen.Nom</td>
                            <td>
                                <a class="btn btn-info" asp-action="ViewCitoyen" asp-route-id="@citoyen.FkUserId">Voir Détails</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else if (Model != null && !Model.Any() && !string.IsNullOrWhiteSpace(ViewBag.SearchString))
        {
            <p class="alert alert-warning">Aucun citoyen trouvé.</p>
        }
    </div>
    <div class="text-left">
        <a asp-action="Index" class="btn btn-link">Retour à l'accueil</a>
    </div>
</div>