@model CVSante.ViewModels.User

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UserCitoyen</h4>
<hr />
<div class="row">
    <div class="col-md-4">  
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form method="post" class="form-container">
                    <fieldset>
                        <legend>Informations Personnelles</legend>

                        <div class="form-group">
                            <label asp-for="userInfo.Nom">Nom</label>
                            <input asp-for="userInfo.Nom" class="form-control" />
                            <span asp-validation-for="userInfo.Nom" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="userInfo.Prenom">Prénom</label>
                            <input asp-for="userInfo.Prenom" class="form-control" />
                            <span asp-validation-for="userInfo.Prenom" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="userInfo.DateNaissance">Date de naissance</label>
                            <input asp-for="userInfo.DateNaissance" type="date" class="form-control" />
                            <span asp-validation-for="userInfo.DateNaissance" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="userInfo.TelephoneCell">Tel cellulaire</label>
                            <input asp-for="userInfo.TelephoneCell" class="form-control" />
                            <span asp-validation-for="userInfo.TelephoneCell" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Sexe à la naissance</label>
                            <div>
                                <label>
                                    <input type="radio" asp-for="userInfo.Sexe" value="Masculin" /> Masculin
                                </label>
                                <label>
                                    <input type="radio" asp-for="userInfo.Sexe" value="Féminin" /> Féminin
                                </label>
                                <label>
                                    <input type="radio" asp-for="userInfo.Sexe" value="Autre" /> Autre
                                </label>
                            </div>
                            <span asp-validation-for="userInfo.Sexe" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="userInfo.Pronoms">Pronoms</label>
                            <input asp-for="userInfo.Pronoms" class="form-control" />
                            <span asp-validation-for="userInfo.Pronoms" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="userInfo.Taille">Taille (pi)</label>
                            <input asp-for="userInfo.Taille" class="form-control" />
                            <span asp-validation-for="userInfo.Taille" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="userInfo.Poids">Poids (lb)</label>
                            <input asp-for="userInfo.Poids" class="form-control" />
                            <span asp-validation-for="userInfo.Poids" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="userInfo.TypeSanguin">Type Sanguin</label>
                            <input asp-for="userInfo.TypeSanguin" class="form-control" />
                            <span asp-validation-for="userInfo.TypeSanguin" class="text-danger"></span>
                        </div>
                    @foreach (var item in Model.handicaps)
                    {
                        <div class="form-group">
                            <label>Handicap</label>
                            <div>
                                <label>
                                    <input type="radio" value="Oui" /> Oui
                                </label>
                                <label>
                                    <input type="radio" value="Non" /> Non
                                </label>
                            </div>
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Situations de handicap</label>
                            <div>
                                <label>
                                    <input type="checkbox" name="HandicapTypes" value="Autisme" /> Autisme
                                </label>
                                <label>
                                    <input type="checkbox" name="HandicapTypes" value="Mobilité réduite" /> Mobilité réduite
                                </label>
                                <label>
                                    <input type="checkbox" name="HandicapTypes" value="Déficience auditive" /> Déficience auditive
                                </label>
                                <label>
                                    <input type="checkbox" name="HandicapTypes" value="Déficience visuelle" /> Déficience visuelle
                                </label>
                                <label>
                                    <input type="checkbox" name="HandicapTypes" value="Autre" /> Autre
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="handicaps">Description du handicap</label>
                            <textarea asp-for="handicaps" class="form-control"></textarea>
                            <span asp-validation-for="handicaps" class="text-danger"></span>
                        </div>

                        <div class="form-buttons">
                            <button type="button" class="btn btn-secondary">Retour</button>
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                            <button type="button" class="btn btn-secondary">Annuler modifications</button>
                            <button type="button" class="btn btn-danger">Supprimer</button>
                            <button type="button" class="btn btn-secondary">Précédent</button>
                            <button type="button" class="btn btn-secondary">Suivant</button>
                        </div>
                    }
                </fieldset>
                </form>
            






            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

